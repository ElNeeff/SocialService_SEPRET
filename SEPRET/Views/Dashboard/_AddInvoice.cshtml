
@model SEPRET.Models.Custom.ReceiptVM

<div class="card-body">
    <form id="AddInvoiceForm">

        <div class="form-group bmd-form-group" style="display: none;">
            <div class="input-group">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="material-icons">vpn_key</i></div>
                </div>
                <label class="bmd-label-floating prepend-label-margin">Id</label>
                @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @type = "text" })
                @Html.TextBoxFor(x => x.PaymentId, new { @class = "form-control", @type = "text" })
                @Html.TextBoxFor(x => x.PersonId, new { @class = "form-control", @type = "text" })
            </div>
        </div>

        <div class="form-group form-file-upload form-file-multiple">
            @Html.TextBoxFor(x => x.File, new { @type = "file", @class = "inputFileHidden", @accept = "application/pdf" })
            <div class="input-group">
                <input type="text" class="form-control inputFileVisible" placeholder="Selecciona la factura en formato PDF">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-fab btn-round btn-primary">
                        <i class="material-icons">attach_file</i>
                    </button>
                </span>
            </div>
        </div>

    </form>
</div>

<script>
    Site.initFileInput();
</script>