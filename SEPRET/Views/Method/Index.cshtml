
@{
    ViewBag.Title = "Métodos de pago";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary card-header-icon row">
                <div class="card-icon">
                    <i class="material-icons">receipt</i>
                </div>
                <h4 class="card-title">Lista de métodos de pago</h4>
            </div>
            <div class="card-body">
                <div class="toolbar">
                    <!--        Here you can write extra buttons/actions for the toolbar              -->
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <ul class="nav nav-pills nav-pills-rose mb-3" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" data-toggle="tab" role="tablist" onclick="MethodDT('Active');" style="cursor: pointer;">
                                        Activos
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" role="tablist" onclick="MethodDT('Inactive');" style="cursor: pointer;">
                                        Inactivos
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6 col-sm-12 text-right">
                            <button class="btn btn-round btn-sm btn-outline-primary" onclick="AddEditMethod(0);">
                                <i class="material-icons">add</i> Agregar método de pago
                            </button>
                        </div>
                    </div>
                </div>
                <div class="material-datatables" style="display: none;">
                    <div id="datatables_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="col-sm-12">
                            <table id="MethodDT" class="table table-striped table-no-bordered table-hover dataTable dtr-inline" width="100%">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Creado el</th>
                                        <th>Activo</th>
                                        <th>Editar</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Creado el</th>
                                        <th>Activo</th>
                                        <th>Editar</th>
                                    </tr>
                                </tfoot>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end content-->
        </div>
        <!--  end card  -->
    </div>
    <!-- end col-md-12 -->
</div>

<div class="modal fade" id="AddEditMethodModal" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="card card-signup card-plain">
                <div class="modal-header">
                    <div class="card-header card-header-primary text-center">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                            <i class="material-icons">clear</i>
                        </button>

                        <h4 class="card-title">Detalles del método de pago</h4>
                    </div>
                </div>
                <div class="modal-body">
                </div>
            </div>
            <div class="card-footer text-center">
                <button class="btn btn-primary btn-round" onclick="SaveMethod();">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(() => {
            MethodDT('Active');
        })

        SaveMethod = () => {
            var MethodData = $('#MethodForm').serialize();

            fetch("@Url.Action("Index", "Method")", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: MethodData
            })
                .then(response => {
                    if (response.ok) {
                        DT.draw();
                        $('#AddEditMethodModal').modal('hide');
                        md.showNotification('bottom', 'right', 'success', 'El método de pago ha sido guardado');
                    } else {
                        md.showNotification('bottom', 'right', 'danger', 'Ocurrió un error al procesar la solicitud');
                    }
                })
                .catch(error => console.error(error))
        }

        AddEditMethod = Id => {
            fetch("@Url.Action("AddEditMethod", "Method")", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json; charset=UTF-8'
                },
                body: JSON.stringify({ Id: Id })
            })
                .then(response => response.text())
                .then(data => {
                    $('.modal-body').empty().append(data);
                    $('#AddEditMethodModal').modal('show');
                })
                .catch(error => console.error(error))
        }

        UpdateMethodStatus = Id => {
            fetch("@Url.Action("UpdateMethodStatus", "Method")", {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json; charset=UTF-8'
                },
                body: JSON.stringify({ Id: Id })
            })
                .then(response => {
                    if (response.ok) {
                        md.showNotification('bottom', 'right', 'success', 'El método de pago ha sido actualizado');
                    } else {
                        md.showNotification('bottom', 'right', 'danger', 'Ocurrió un error al procesar la solicitud');
                    }
                })
        }

        MethodDT = Filter => {
            $('.material-datatables').hide();
            DT = $('#MethodDT').DataTable({
                destroy: true,
                responsive: true,
                autoWidth: true,
                processing: true,
                serverSide: true,
                ajax: {
                    type: 'POST',
                    url: '@Url.Action("MethodDT", "Method")',
                    data: data => {
                        data.Filter = Filter;
                    }
                },
                columns: [
                    { data: 'Name' },
                    { data: 'TimeCreatedFormatted' },
                    {
                        render: (data, type, row) => {
                            if (row['Active']) {
                                return '<div class="togglebutton"><label><input type="checkbox" checked="" onClick="UpdateMethodStatus(' + row['Id'] + ');"><span class="toggle"></span></label></div>';
                            } else {
                                return '<div class="togglebutton"><label><input type="checkbox" onClick="UpdateMethodStatus(' + row['Id'] + ');"><span class="toggle"></span></label></div>';
                            }
                        }
                    },
                    {
                        data: 'Id',
                        render: (Id, type, full, meta) => '<button class="btn btn-round btn-outline-primary btn-fab btn-fab-mini" onClick="AddEditMethod(' + Id + ');"><i class="material-icons">edit</i></button>'
                    }
                ],
                columnDefs: [
                    { className: 'text-center', targets: [1, 2, 3] }
                ],
                language: {
                    url: '@(HttpContext.Current.Request.Url.AbsolutePath.Contains("SEPRET") ? "/SEPRET/Assets/json/SpanishDT.json" : "/Assets/json/SpanishDT.json")'
                },
                initComplete: () => {
                    $('select').selectpicker();
                    Site.StyleDropdownDT();
                    $('.material-datatables').show();
                }
            });
        }
    </script>
} 