@model SEPRET.Models.Custom.SignInVM
@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

    <div id="SignIn" class="col-sm-12 col-md-12 col-lg-8 col-xl-6 ml-auto mr-auto" style="display: none">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <form class="form">
                <div class="card card-hidden">
                    <div class="card-header card-header-primary text-center">
                        <h4 class="card-title">Iniciar sesión</h4>
                    </div>
                    <div class="card-body">

                        <div class="form-group bmd-form-group mt-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="material-icons">mail</i></div>
                                </div>
                                <label class="bmd-label-floating prepend-label-margin">Correo electrónico</label>
                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "text", @required = "true", @aria_required = "true" })
                            </div>
                        </div>

                        <div class="form-group bmd-form-group mt-4">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="material-icons">vpn_key</i></div>
                                </div>
                                <label class="bmd-label-floating prepend-label-margin">Contraseña</label>
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @type = "password", @required = "true", @aria_required = "true" })
                            </div>
                        </div>

                        <!--CON ESTA LINEA S DA EEL MENSAJE DE ERROR EN CASOS DE DATOS INCORRECTOS
                        EL MANESAJE QUE MUESTRA ES ENVIADO DESDE EL CONTROLADOR DE HOME EN EL METODO SignIn QUE RECIBE COMO PARAMETRO EL MODELO DE SignInMV, en ese metodo es donde se hace la vaalidacion 
                            del usuario-->
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    </div>
                    <div class="card-footer justify-content-center">
                        <button class="btn btn-primary btn-round">Iniciar sesión</button>
                    </div>
                    <div class="d-flex justify-content-around mt-2 mb-3">
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "PaswordRecovery", "Home")
                    </div>
                </div>
            </form>
        }
    </div>

@section scripts{
    <script>
        $(document).ready(function () {
            md.checkFullPageBackgroundImage();
            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('#SignIn').fadeIn();
            }, 500);
        });
    </script>
}