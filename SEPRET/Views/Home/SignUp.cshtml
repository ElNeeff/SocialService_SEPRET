@model SEPRET.Models.Custom.PersonVM

@{
    ViewBag.Title = "Regístrate";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}


<div id="SignUp" class="col-md-8 ml-auto mr-auto mt-sm-5-custom" style="display: none">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <form class="form">
            <div class="card card-hidden">
                <div class="card-header card-header-primary text-center">
                    <h4 class="card-title">Crea una cuenta</h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-primary alert-with-icon mt-3" data-notify="container">
                        <i class="material-icons" data-notify="icon">notifications</i>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <i class="material-icons">close</i>
                        </button>
                        <span data-notify="icon" class="now-ui-icons ui-1_bell-53"></span>
                        <span data-notify="message">
                            Asegurate de escribir correctamente tú dirección de correo electrónico debido a que ahí estarás recibiendo notificaciones importantes de los procesos que realices.
                        </span>
                    </div>

                    <div class="form-group bmd-form-group mt-5">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="material-icons">fingerprint</i></div>
                            </div>
                            <label class="bmd-label-floating prepend-label-margin">Número de control</label>
                            @Html.TextBoxFor(x => x.Enrollment, new { @id = "NC", @class = "form-control", @type = "text", @required = "true", @aria_required = "true" })
                        </div>
                    </div>

                    <div class="form-group bmd-form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="material-icons">contact_mail</i></div>
                            </div>
                            <label class="bmd-label-floating prepend-label-margin">Correo electrónico</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @type = "text", @required = "true", @aria_required = "true" })
                        </div>
                    </div>

                    <div class="form-group bmd-form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text"><i class="material-icons">vpn_key</i></div>
                            </div>
                            <label class="bmd-label-floating prepend-label-margin">Contraseña</label>
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @type = "password", @required = "true", @aria_required = "true" })
                        </div>
                    </div>

                </div>

                <div class="d-flex flex-column">
                    <div class="d-flex justify-content-center">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-primary btn-round">Crear cuenta</button>
                    </div>
                    <div class="d-flex justify-content-around mt-2 mb-3">
                        @Html.ActionLink("¿Ya tienes cuenta? Inicia sesión aquí", "SignIn", "Home")
                        @Html.ActionLink("¿Olvidaste tu contraseña?", "PaswordRecovery", "Home")
                    </div>
                </div>
            </div>
        </form>
    }
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            //$('#check').click(function () {
            //    $('#NC').val('');
            //    $('#enrollment').toggle(this.checked);
            //})
            //md.checkFullPageBackgroundImage();
            setTimeout(function () {
                // after 1000 ms we add the class animated to the login/register card
                $('#SignUp').fadeIn();
            }, 500);
        });
    </script>
}