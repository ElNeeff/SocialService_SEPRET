@model SEPRET.Models.Custom.CommentVM

<form id="form">
    <div class="card card-signup card-plain">
        <div class="modal-header">
            <div class="card-header card-header-primary text-center">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
                <h4 class="card-title">Rechazar</h4>
            </div>
        </div>
        <div class="modal-body">
            <div class="card-body">
                @Html.HiddenFor(x => x.Id)
                <div class="form-group bmd-form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="material-icons">comment</i></div>
                        </div>
                        <label class="bmd-label-floating prepend-label-margin">Motivo de rechazo:</label>
                        @Html.TextAreaFor(x => x.Mensaje, new { @class = "form-control", @rows = "5", @id = "Comment", @required = "" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer text-center">
        <button class="btn btn-primary btn-round" onclick="Dictum(@Model.Id, 'Reject', this);">Rechazar</button>
    </div>
</form>